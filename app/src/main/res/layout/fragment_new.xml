<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="1"
    android:layout_column="7"
    tools:context=".NewFragment">

    <Spinner
        android:id="@+id/spinner.category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner.weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinner.weapon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner.category"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/divider2"
        android:layout_width="391dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner.weapon" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/plainText_loadoutsName"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        tools:text="@string/plainText_loadoutsName" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView.gearSet"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout.shoes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/background_stripe_shoes">

            <ImageView
                android:id="@+id/imageView.shoes_sub3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="4"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.shoes_sub2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="3"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.shoes_sub1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="2"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.shoes_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/not_set"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.shoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#B3000000"
                android:src="@drawable/ic_shoes"
                app:layout_column="0"
                app:layout_columnWeight="6"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout.clothing"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_stripe_clothing">

            <ImageView
                android:id="@+id/imageView.clothing_sub3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="4"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.clothing_sub2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="3"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.clothing_sub1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="2"
                app:layout_columnWeight="2"
                app:layout_gravity="bottom"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.clothing_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/not_set"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.clothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#B3000000"
                android:src="@drawable/ic_clothing"
                app:layout_column="0"
                app:layout_columnWeight="6"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout.head"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_stripe_head">

            <ImageView
                android:id="@+id/imageView.head_sub3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="4"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.head_sub2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="3"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.head_sub1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_set"
                app:layout_column="2"
                app:layout_columnWeight="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.head_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/not_set"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageView.headgear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#B3000000"
                android:src="@drawable/ic_headgear"
                app:layout_column="0"
                app:layout_columnWeight="6"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.cardview.widget.CardView>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:columnCount="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView.gearSet"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageView.dropRoller"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/drop_roller"
            app:layout_column="7"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.objectShredder"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/object_shredder"
            app:layout_column="6"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.stealthJump"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/stealth_jump"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.abilityDoubler"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ability_doubler"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.thermalInk"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/thermal_ink"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.respawnPunisher"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/respawn_punisher"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.haunt"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/haunt"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.ninjaSquid"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ninja_squid"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView.comeback"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/comeback"
            app:layout_column="8"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.tenacity"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/tenacity"
            app:layout_column="7"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.lastDitchEffort"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/last_ditch_effort"
            app:layout_column="6"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.openingGambit"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/opening_gambit"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.mainPowerUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/main_power_up"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.bombDefenceUpDx"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/bomb_defence_up_dx"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.inkResistanceUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ink_resistance_up"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.subPowerUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/sub_power_up"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.quickSuperJump"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/quick_super_jump"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView.quickRespawn"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/quick_respawn"
            app:layout_column="8"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.specialPowerUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/special_power_up"
            app:layout_column="7"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.specialSaver"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/special_saver"
            app:layout_column="6"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.specialChargeUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/special_charge_up"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.swimSpeedUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/swim_speed_up"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.runSpeedUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/run_speed_up"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.inkRecorveryUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ink_recorvery_up"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.inkSaverSub"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ink_saver_sub"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView.inkSaverMain"
            android:layout_width="0dp"
            android:layout_height="@dimen/gear_size"
            android:padding="1dp"
            android:src="@drawable/ink_saver_main"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>